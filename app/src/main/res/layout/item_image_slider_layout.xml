<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:paddingBottom="20dp"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"

    android:paddingRight="10dp"
    android:paddingLeft="10dp">




    <LinearLayout
        android:id="@+id/ll_bgcolor"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:orientation="vertical"
        android:background="@drawable/bg_golden" >


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-70dp"
        >


        <View
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/white_bg2"
            android:layout_weight="0.5"

            android:layout_gravity="bottom" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_above="@id/tv_intro_title"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"  />


        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"

        android:background="@drawable/white_bg">
        <TextView
            android:id="@+id/tv_intro_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Title"

            android:textSize="20dp"
            android:padding="6dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tv_intro_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:paddingLeft="6dp"
            android:layout_marginTop="10dp"
            android:paddingRight="6dp"
            android:text="Message"

            android:textSize="14dp"
            android:layout_marginBottom="4dp"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:layout_marginTop="16dp"
            android:paddingRight="30dp">
            <Button
                android:id="@+id/btn_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscribe"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:background="@drawable/btn_golden"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>